<Window x:Class="CursWPF.Windows.InfoCreate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursWPF.Windows"
        mc:Ignorable="d"
        Title="Добавление информационной таблички" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Текст:" HorizontalAlignment="Left" Margin="58,39,0,0" VerticalAlignment="Top" Height="26" Width="65"/>
        <TextBox Text="{Binding Title}" HorizontalAlignment="Left" Margin="128,44,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="173" Width="350" Background="#FFE2CFCF"/>
        <Button Content="Добавить" Command="{Binding Save}" HorizontalAlignment="Center" Margin="0,371,0,0" VerticalAlignment="Top" Height="45"/>
        <Button Content="Выйти" Click="Exit" HorizontalAlignment="Left" Margin="462,371,0,0" VerticalAlignment="Top" Height="45" Width="59"/>
    </Grid>
</Window>
