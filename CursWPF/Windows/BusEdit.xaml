<Window x:Class="CursWPF.Windows.BusEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursWPF.Windows"
        mc:Ignorable="d"
        Title="Редактирование автобусов" Height="450" Width="800">
    <Grid>
        <TextBox Text="{Binding Number}" HorizontalAlignment="Left" Margin="149,70,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="21" Width="350" Background="#FFE2CFCF"/>
        <Label Content="Номер автобуса:" HorizontalAlignment="Left" Margin="11,70,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Site}" HorizontalAlignment="Left" Margin="149,96,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="21" Width="350" Background="#FFE2CFCF"/>
        <Label Content="Кол-во мест:" HorizontalAlignment="Left" Margin="33,91,0,0" VerticalAlignment="Top"/>

        <Button Content="Сохранить" Command="{Binding SaveBus}" HorizontalAlignment="Center" Margin="0,371,0,0" VerticalAlignment="Top" Height="45"/>
    </Grid>
</Window>
